<div class="sidebar show" data-tooltip-direction="UP">
    <div class="menu">
        <div class="header" data-tooltip-direction="DOWN">
            <div class="controls left">
                <a data-action="close-window" data-tooltip="{{@root.i18n.path 'close'}}">
                    <i class="fa-solid fa-xmark"></i>
                </a>
            </div>
            <div class="title">{{@root.i18n 'trigger.title'}}</div>
            <div class="controls right">
                <a data-action="import" data-tooltip="{{@root.i18n.path 'import'}}">
                    <i class="fa-solid fa-file-import"></i>
                </a>
                <a data-action="export-all" data-tooltip="{{@root.i18n.path 'export-all'}}">
                    <i class="fa-solid fa-file-export"></i>
                </a>
                <a data-action="add-trigger" data-tooltip="{{@root.i18n.path 'trigger.add'}}">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="scroll scroll-triggers">
            <ul class="triggers">
                {{#each triggers as |trigger|}}
                <li class="trigger{{#if (eq trigger.id @root.selected)}} active{{/if}}"
                    data-id="{{trigger.id}}">
                    <input class="enabled" type="checkbox" name="enabled" {{checked
                        trigger.enabled}}>
                    <div class="name" data-action="select-trigger">
                        {{trigger.name}}
                    </div>
                    <div class="controls">
                        <a data-action="export-trigger"
                            data-tooltip="{{@root.i18n.path 'trigger.export'}}">
                            <i class="fa-solid fa-file-export"></i>
                        </a>
                        <a data-action="delete-trigger"
                            data-tooltip="{{@root.i18n.path 'trigger.delete'}}">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="header">
            <div class="title">{{@root.i18n 'variable.title'}}</div>
            <div class="controls right">
                <a data-action="add-variable" data-tooltip="{{@root.i18n.path 'variable.add'}}"
                    {{disabled (not selected)}}>
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="scroll">
            <ul class="variables">
                {{#each variables as |variable|}}
                <li class="variable" data-id="{{variable.entryId}}">
                    <div class="name">
                        <i class="fa-solid fa-circle" style="color: #{{variable.color}};"></i>
                        {{variable.label}}
                    </div>
                    <div class="controls">
                        <a data-action="remove-variable"
                            data-tooltip="{{@root.i18n.path 'variable.delete'}}">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="header">
            <div class="title">{{@root.i18n 'subtrigger.title'}}</div>
            <div class="controls right">
                <a data-action="add-subtrigger" data-tooltip="{{@root.i18n.path 'subtrigger.add'}}">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="scroll scroll-subtriggers">
            <ul class="triggers sub">
                {{#each subtriggers as |trigger|}}
                <li class="trigger{{#if (eq trigger.id @root.selected)}} active{{/if}}"
                    data-id="{{trigger.id}}">
                    <div class="name" data-action="select-trigger">
                        {{trigger.name}}
                    </div>
                    <div class="controls">
                        <a data-action="export-trigger"
                            data-tooltip="{{@root.i18n.path 'subtrigger.export'}}">
                            <i class="fa-solid fa-file-export"></i>
                        </a>
                        <a data-action="delete-trigger"
                            data-tooltip="{{@root.i18n.path 'subtrigger.delete'}}">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="indicator">
        <i class="fa-solid fa-chevrons-right"></i>
    </div>
</div>
<div class="trigger-title"></div>
<div class="collapse" data-tooltip="Collapse">
</div>
<div class="window-controls">
    <a data-action="reset-triggers" data-tooltip="{{@root.i18n 'reset'}}">
        <i class="fa-solid fa-rotate-left"></i>
    </a>
    <a data-action="save-triggers" data-tooltip="{{@root.i18n 'save'}}">
        <i class="fa-solid fa-floppy-disk"></i>
    </a>
    <a data-action="collapse-window" data-tooltip="{{@root.i18n 'collapse'}}">
        <i class="fa-solid fa-compress"></i>
    </a>
</div>
<div class="window-collapsed">
    <a data-action="expand-window" data-tooltip="{{@root.i18n 'expand'}}">
        <i class="fa-solid fa-expand"></i>
    </a>
</div>